@code {
    EventoCrearDTO evento = new();
    List<CausaDTO> causas = new();
    List<TipoEstadoDTO> tipoestados = new();
    string Mensaje = "";
    bool cargando = true;

    bool mostrarModalPaciente = false;

    PacienteCrearDTO nuevoPaciente = new();
    List<PacienteCrearDTO> pacientes = new();



    protected override async Task OnInitializedAsync()
    {
        try
        {
            var respCausas = await Http.Get<List<CausaDTO>>("api/causa");
            var respEstados = await Http.Get<List<TipoEstadoDTO>>("api/tipoestado");

            if (!respCausas.Error) causas = respCausas.Respuesta!;
            if (!respEstados.Error) tipoestados = respEstados.Respuesta!;
        }
        catch (Exception ex)
        {
            Mensaje = $"Error al cargar datos: {ex.Message}";
        }

        cargando = false;
    }

    private async Task GuardarEvento()
    {
        evento.Pacientes = pacientes;

        var respEvento = await Http.Post<EventoCrearDTO, int>("api/evento/CrearEventoConPaciente", evento);
        if (respEvento.Error)
        {
            Mensaje = respEvento.ObtenerError();
            return;
        }

        Nav.NavigateTo("/eventos", forceLoad: true);
    }

    private void Cancelar()
    {
        Nav.NavigateTo("/eventos");
    }

    private void AbrirModalPaciente()
    {
        nuevoPaciente = new();
        mostrarModalPaciente = true;
    }

    private void CerrarModal()
    {
        mostrarModalPaciente = false;
    }
    private void GuardarPaciente()
    {
        var copia = new PacienteCrearDTO
        {
            Persona = new PersonaCrearDTO
            {
                Nombre = nuevoPaciente.Persona.Nombre,
                DNI = nuevoPaciente.Persona.DNI,
                Legajo = nuevoPaciente.Persona.Legajo,
                Direccion = nuevoPaciente.Persona.Direccion,
                Sexo = nuevoPaciente.Persona.Sexo,
                Edad = nuevoPaciente.Persona.Edad
            },
            ObraSocial = nuevoPaciente.ObraSocial
        };

        pacientes.Add(copia);
        mostrarModalPaciente = false;
    }


}
