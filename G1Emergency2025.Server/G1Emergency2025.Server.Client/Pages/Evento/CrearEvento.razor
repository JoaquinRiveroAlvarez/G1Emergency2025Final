@code {
    
    PacienteCrearDTO nuevoPaciente = new() { Persona = new PersonaCrearDTO() };
    EventoCrearDTO evento = new()
    {
        colorEvento = ColorEvento.Verde,
        FechaHora = DateTime.Now,
        TipoEstadoId = 1 
    };

    List<CausaDTO> causas = new();
    List<TipoEstadoDTO> tipoestados = new();
    List<MovilListadoDTO> moviles = new();

    string Mensaje = "";
    bool cargando = true;
    bool eventoGuardado = false;
    string movilAsignado = "";
    bool mostrarModalMoviles = false;
    bool mostrarModalPaciente = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var respCausas = await Http.Get<List<CausaDTO>>("api/causa");
            var respEstados = await Http.Get<List<TipoEstadoDTO>>("api/tipoestado");

            if (!respCausas.Error) causas = respCausas.Respuesta!;
            if (!respEstados.Error) tipoestados = respEstados.Respuesta!;
        }
        catch (Exception ex)
        {
            Mensaje = $"Error al cargar datos: {ex.Message}";
        }

        cargando = false;
    }

    private async Task GuardarEvento()
    {
        var respEvento = await Http.Post<EventoCrearDTO, int>("api/evento/CrearEventoConPaciente", evento);
        if (respEvento.Error)
        {
            Mensaje = respEvento.ObtenerError();
            return;
        }

        evento.Id = respEvento.Respuesta!;
        eventoGuardado = true;
        Mensaje = "Evento guardado correctamente.";

        Nav.NavigateTo("/eventos"); // ← Redirección automática
    }

    

    private string GetCircleClass(ColorEvento color)
    {
        return (evento.colorEvento == color)
            ? "rounded-circle d-inline-block border border-3 border-white shadow"
            : "rounded-circle d-inline-block border border-2 border-dark";
    }

    
    private void AbrirModalPaciente()
    {
        nuevoPaciente = new PacienteCrearDTO { Persona = new PersonaCrearDTO() };
        mostrarModalPaciente = true;
    }

    private void GuardarPaciente()
    {
       
        var copia = new PacienteCrearDTO
        {
            ObraSocial = nuevoPaciente.ObraSocial,
            Persona = new PersonaCrearDTO
            {
                Nombre = nuevoPaciente.Persona.Nombre,
                DNI = nuevoPaciente.Persona.DNI,
                Direccion = nuevoPaciente.Persona.Direccion,
                Sexo = nuevoPaciente.Persona.Sexo,
                Edad = nuevoPaciente.Persona.Edad
            },
            Eventos = new List<EventoPacienteDTO>
        {
            new EventoPacienteDTO
            {
                EventoId = evento.Id, 
                DiagnosticoPresuntivo = nuevoPaciente.Eventos.Any()
                    ? nuevoPaciente.Eventos.First().DiagnosticoPresuntivo
                    : "Sin Diagnóstico"
            }
        }
        };

        
        evento.Pacientes.Add(copia);

        mostrarModalPaciente = false;
        Mensaje = $"Paciente {copia.Persona.Nombre} agregado.";
    }


    private void CerrarModal()
    {
        mostrarModalPaciente = false;
    }

   

    private void Cancelar()
    {
        Nav.NavigateTo("/eventos");
    }

 
    private void VolverALista()
    {
        Nav.NavigateTo("/eventos");
    }
}




