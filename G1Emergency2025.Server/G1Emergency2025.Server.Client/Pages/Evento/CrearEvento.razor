@if (mostrarModalMoviles)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">Asignar Móvil</h5>
                    <button type="button" class="btn-close" @onclick="CerrarModalMoviles"></button>
                </div>
                <div class="modal-body">
                    <ul class="list-group">
                        @foreach (var m in moviles)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@m.Patente - @m.TipoMovil (@m.disponibilidadMovil)</span>
                                @if (m.disponibilidadMovil == DisponibilidadMovil.libre)
                                {
                                    <button class="btn btn-sm btn-success"
                                            @onclick="() => AsignarMovil(m.Id, m.Patente)">
                                        Asignar
                                    </button>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Ocupado</span>
                                }
                            </li>
                        }
                    </ul>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalMoviles">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    // DTOs nuevos
    PacienteDiagPresuntivoDTO nuevoPaciente = new();
    EventoDiagPresuntivoListadoDTO evento = new()
    {
        colorEvento = ColorEvento.Verde,
        FechaHora = DateTime.Now
    };

    List<CausaDTO> causas = new();
    List<TipoEstadoDTO> tipoestados = new();
    List<MovilListadoDTO> moviles = new();

    string Mensaje = "";
    bool cargando = true;
    bool eventoGuardado = false;
    string movilAsignado = "";
    bool mostrarModalMoviles = false;
    bool mostrarModalPaciente = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var respCausas = await Http.Get<List<CausaDTO>>("api/causa");
            var respEstados = await Http.Get<List<TipoEstadoDTO>>("api/tipoestado");

            if (!respCausas.Error) causas = respCausas.Respuesta!;
            if (!respEstados.Error) tipoestados = respEstados.Respuesta!;
        }
        catch (Exception ex)
        {
            Mensaje = $"Error al cargar datos: {ex.Message}";
        }

        cargando = false;
    }

    private async Task GuardarEvento()
    {
        var respEvento = await Http.Post<EventoDiagPresuntivoListadoDTO, int>("api/evento/CrearEventoConPaciente", evento);
        if (respEvento.Error)
        {
            Mensaje = respEvento.ObtenerError();
            return;
        }

        evento.Id = respEvento.Respuesta!;
        eventoGuardado = true;
        Mensaje = "Evento guardado correctamente. Ahora podés asignar un móvil.";
    }

    private async Task AbrirModalMoviles()
    {
        var resp = await Http.Get<List<MovilListadoDTO>>("api/movil");
        if (!resp.Error) moviles = resp.Respuesta ?? new();
        mostrarModalMoviles = true;
    }

    private string GetCircleClass(ColorEvento color)
    {
        if (evento.colorEvento == color)
            return "rounded-circle d-inline-block border border-3 border-dark shadow";

        return "rounded-circle d-inline-block border border-2 border-white";
    }

    private void CerrarModalMoviles() => mostrarModalMoviles = false;

    private async Task AsignarMovil(int movilId, string patente)
    {
        var resp = await Http.Put<object, object>($"api/movil/{movilId}/asignarEvento/{evento.Id}", new { });
        if (!resp.Error)
        {
            movilAsignado = patente;
            Mensaje = $"Móvil asignado correctamente: {patente}";
            mostrarModalMoviles = false;
        }
        else
        {
            Mensaje = $"Error al asignar móvil: {resp.ObtenerError()}";
        }
    }

    private void Cancelar()
    {
        Nav.NavigateTo("/eventos");
    }

    private void AbrirModalPaciente()
    {
        nuevoPaciente = new();
        mostrarModalPaciente = true;
    }

    private void CerrarModal()
    {
        mostrarModalPaciente = false;
    }

    private void GuardarPaciente()
    {
        var copia = new PacienteDiagPresuntivoDTO
        {
            NombrePersona = nuevoPaciente.NombrePersona,
            DNIPersona = nuevoPaciente.DNIPersona,
            DireccionPersona = nuevoPaciente.DireccionPersona,
            SexoPersona = nuevoPaciente.SexoPersona,
            EdadPersona = nuevoPaciente.EdadPersona,
            ObraSocial = nuevoPaciente.ObraSocial,
            DiagnosticoPresuntivo = nuevoPaciente.DiagnosticoPresuntivo
        };

        evento.Pacientes.Add(copia);
        mostrarModalPaciente = false;
    }

    private void VolverALista()
    {
        Nav.NavigateTo("/eventos");
    }
}


