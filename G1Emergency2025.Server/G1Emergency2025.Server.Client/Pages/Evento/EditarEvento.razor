            + Agregar paciente
        </button>


        <div class="mt-4 d-flex flex-wrap gap-2">
            <button class="btn btn-success" type="submit">Guardar</button>
           <button class="btn btn-secondary" type="button" @onclick="Volver">Cancelar</button>
        </div>
    </EditForm>

