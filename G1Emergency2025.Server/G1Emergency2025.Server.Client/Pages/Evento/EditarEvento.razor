@code {
    [Parameter] public string vista { get; set; } = "recientes";
    [Parameter] public int Id { get; set; }
    private EventoActualizarDTO? evento;
    private List<CausaDTO> causas = new();
    private List<TipoEstadoDTO> tipoestados = new();
    private string Mensaje = "";
    private bool cargando = true;
    private bool mostrarModalConfirmacion = false;

    // Pacientes asociados al evento
    private List<PacienteDiagPresuntivoDTO> pacienteact = new();

    // Paciente en edición
    private PacienteDiagPresuntivoDTO pacienteEditar = new();

    // Paciente a eliminar
    private PacienteDiagPresuntivoDTO? pacienteAEliminar;

    // Pacientes nuevos en memoria
    private List<PacienteDiagPresuntivoDTO> pacientesNuevos = new();

    // Ids de pacientes editados
    private List<int> pacientesEditados = new();

    // Ids de pacientes eliminados
    private List<int> pacientesEliminados = new();

    // Paciente que se está creando en el modal
    private PacienteDiagPresuntivoDTO nuevoPaciente = new();
    
    private bool mostrarModalPaciente = false;
    private bool mostrarModalEditar = false;
    private bool mostrarModalConfirmacionPaciente = false;


    protected override async Task OnInitializedAsync()
    {
        try
        {
            var respTipoEstados = await Http.Get<List<TipoEstadoDTO>>("api/tipoestado");
            if (!respTipoEstados.Error) tipoestados = respTipoEstados.Respuesta!;

            var respCausas = await Http.Get<List<CausaDTO>>("api/causa");
            if (!respCausas.Error) causas = respCausas.Respuesta!;

            // Cargar evento completo con pacientes
            var respEvento = await Http.Get<EventoDiagPresuntivoListadoDTO>($"api/evento/id/{Id}");
            if (!respEvento.Error && respEvento.Respuesta is not null)
            {
                var e = respEvento.Respuesta!;
                evento = new EventoActualizarDTO
                {
                    Id = e.Id,
                    Codigo = e.Codigo,
                    Relato = e.Relato,
                    colorEvento = e.colorEvento,
                    Ubicacion = e.Ubicacion,
                    Telefono = e.Telefono,
                    FechaHora = e.FechaHora,
                    CausaId = e.CausaId,
                    TipoEstadoId = e.TipoEstadoId
                };

                pacienteact = e.Pacientes?.ToList() ?? new List<PacienteDiagPresuntivoDTO>();
            }
            else
            {
                Mensaje = respEvento.ObtenerError();
            }
        }
        catch (Exception ex)
        {
            Mensaje = $"Error al cargar datos: {ex.Message}";
        }

        cargando = false;
    }





    // Abrir modal para agregar paciente nuevo
    private void AbrirModalPaciente()
    {
        nuevoPaciente = new PacienteDiagPresuntivoDTO();
        mostrarModalPaciente = true;
    }


    private void CerrarModal()
    {
        mostrarModalPaciente = false;
    }

    private void MostrarConfirmacion()
    {
        mostrarModalConfirmacion = true;
    }

    private void CancelarConfirmacion()
    {
        mostrarModalConfirmacion = false;
    }

    private async Task GuardarCambios()
    {
        mostrarModalConfirmacion = false;

        var idsAsociados = pacienteact
            .Where(p => !pacientesEliminados.Contains(p.Id))
            .Select(p => p.Id)
            .Where(id => id > 0)
            .ToList();

        var nuevosParaCrear = pacientesNuevos.Select(p => new PacienteCrearDTO
        {
            ObraSocial = p.ObraSocial,
            Persona = new PersonaCrearDTO
            {
                Nombre = p.NombrePersona,
                DNI = p.DNIPersona,
                Direccion = p.DireccionPersona,
                Sexo = p.SexoPersona,
                Edad = p.EdadPersona
            },
                Eventos = new List<EventoPacienteDTO>
    {
            new EventoPacienteDTO
            {
                EventoId = evento!.Id,
                DiagnosticoPresuntivo = p.DiagnosticoPresuntivo
            }
    }
        }).ToList();

        var dto = new EventoActualizarDTO
        {
            Id = evento!.Id,
            Relato = evento.Relato,
            colorEvento = evento.colorEvento,
            Ubicacion = evento.Ubicacion,
            Telefono = evento.Telefono,
            FechaHora = evento.FechaHora,
            CausaId = evento.CausaId,
            TipoEstadoId = evento.TipoEstadoId,
            PacienteIds = idsAsociados,
            Pacientes = nuevosParaCrear
        };

        var respEvento = await Http.Put<EventoActualizarDTO, bool>($"api/evento/{Id}/pacienteEvento", dto);
        if (respEvento.Error)
        {
            Mensaje = respEvento.ObtenerError();
            return;
        }

        // Persistir datos personales de pacientes editados
        foreach (var idEditado in pacientesEditados)
        {
            var paciente = pacienteact.FirstOrDefault(p => p.Id == idEditado);
            if (paciente is null) continue;

            var dtoActualizar = new PacienteActualizarDTO
            {
                Id = paciente.Id,
                ObraSocial = paciente.ObraSocial,
                PersonaDTO = new PersonaDTO
                {
                    Nombre = paciente.NombrePersona,
                    DNI = paciente.DNIPersona,
                    Direccion = paciente.DireccionPersona,
                    Sexo = paciente.SexoPersona,
                    Edad = paciente.EdadPersona
                },
                Eventos = new List<EventoPacienteDTO>()
            };

            var respPaciente = await Http.Put<PacienteActualizarDTO, bool>($"api/paciente/{paciente.Id}", dtoActualizar);
            if (respPaciente.Error)
            {
                Mensaje = $"Error actualizando paciente {paciente.NombrePersona}: {respPaciente.ObtenerError()}";
                return;
            }
        }

        Nav.NavigateTo("/eventos", forceLoad: true);
        pacientesNuevos.Clear();
        pacientesEditados.Clear();
        pacientesEliminados.Clear();
    }





    // AGREGAR PACIENTE NUEVO
    private void GuardarPaciente()
    {
        var copia = new PacienteDiagPresuntivoDTO
        {
            NombrePersona = nuevoPaciente.NombrePersona,
            DNIPersona = nuevoPaciente.DNIPersona,
            DireccionPersona = nuevoPaciente.DireccionPersona,
            SexoPersona = nuevoPaciente.SexoPersona,
            EdadPersona = nuevoPaciente.EdadPersona,
            ObraSocial = nuevoPaciente.ObraSocial
        };

        pacientesNuevos.Add(copia);
        mostrarModalPaciente = false;
        Mensaje = $"Paciente {copia.NombrePersona} agregado en memoria.";
    }


    // ABRIR MODAL DE EDICIÓN
    private async Task AbrirModalEditarPaciente(int pacienteId)
    {
        var resp = await Http.Get<PacienteDTO>($"api/paciente/Id/{pacienteId}");
        if (!resp.Error && resp.Respuesta is not null)
        {
            var p = resp.Respuesta;

            pacienteEditar = new PacienteDiagPresuntivoDTO
            {
                Id = pacienteId, // ✅ asegurá el Id
                ObraSocial = p.ObraSocial,
                NombrePersona = p.PersonaDTO.Nombre,
                DNIPersona = p.PersonaDTO.DNI,
                DireccionPersona = p.PersonaDTO.Direccion,
                SexoPersona = p.PersonaDTO.Sexo,
                EdadPersona = p.PersonaDTO.Edad
            };

            mostrarModalEditar = true;
        }
        else
        {
            Mensaje = resp.ObtenerError();
        }
    }




    // GUARDAR PACIENTE EDITADO
    private void GuardarPacienteEditado()
    {
        if (pacienteEditar is null)
        {
            Mensaje = "No hay paciente para editar.";
            return;
        }

        var idx = pacienteact.FindIndex(p => p.Id == pacienteEditar.Id);
        if (idx == -1)
        {
            Mensaje = "No se encontró el paciente en la lista del evento.";
            return;
        }

        // Actualizar en memoria los datos del paciente
        pacienteact[idx] = pacienteEditar;

        // Marcar como editado para persistir en BD después
        if (!pacientesEditados.Contains(pacienteEditar.Id))
            pacientesEditados.Add(pacienteEditar.Id);

        mostrarModalEditar = false;
        Mensaje = $"Paciente {pacienteEditar.NombrePersona} editado en memoria.";
    }



    // CERRAR MODAL DE EDICIÓN
    private void CerrarModalEditar()
    {
        mostrarModalEditar = false;
    }

    // SOLICITAR CONFIRMACIÓN DE BORRADO
  
    private void SolicitarConfirmacionPaciente(PacienteDiagPresuntivoDTO paciente)
    {
        pacienteAEliminar = paciente;
        mostrarModalConfirmacionPaciente = true;
    }

    private void CancelarConfirmacionPaciente()
    {
        pacienteAEliminar = null;
        mostrarModalConfirmacionPaciente = false;
    }

    private void ConfirmarBorradoPaciente()
    {
        if (pacienteAEliminar is not null)
        {
            // Quitar de la lista en memoria
            pacienteact.Remove(pacienteAEliminar);

            // Marcar para desasociación del evento
            if (!pacientesEliminados.Contains(pacienteAEliminar.Id))
                pacientesEliminados.Add(pacienteAEliminar.Id);

            Mensaje = $"Paciente {pacienteAEliminar.NombrePersona} marcado para eliminar del evento.";
        }

        pacienteAEliminar = null;
        mostrarModalConfirmacionPaciente = false;
    }


    private string GetCircleClass(ColorEvento color)
    {
        if (evento!.colorEvento == color)
            return "rounded-circle d-inline-block border border-3 border-white";

        return "rounded-circle d-inline-block border border-2 border-dark shadow";
    }

